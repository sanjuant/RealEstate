{{ form_start(form) }}
<div class="row">
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-4">{{ form_row(form.title) }}</div>
            <div class="col-md-4">{{ form_row(form.surface) }}</div>
            <div class="col-md-4">{{ form_row(form.price) }}</div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="row flex">
            {% for picture in property.pictures %}
                {% if picture.id %}
                <div class="col" style="width: 100px; flex: none; margin: 5px;">
                    <img src="{{ vich_uploader_asset(picture, 'imageFile') | imagine_filter('thumbnail') }}" width="100" alt="">
                    <a href="{{ path('admin.picture.delete', {id: picture.id}) }}" class="btn btn-danger" data-delete data-token="{{ csrf_token('delete' ~ picture.id) }}" onsubmit="return confirm('Êtes vous vraiment sûr ?')">Supprimer</a>
                </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-2">{{ form_row(form.rooms) }}</div>
    <div class="col-md-2">{{ form_row(form.bedrooms) }}</div>
    <div class="col-md-2">{{ form_row(form.heat) }}</div>
    <div class="col-md-2">{{ form_row(form.floor) }}</div>
</div>
<div class="row">
    <div class="col-md-9">{{ form_row(form.pictureFiles) }}</div>
    <div class="col-md-3">{{ form_row(form.sold) }}</div>
</div>
<div class="row">
    <div class="col-md-6">{{ form_row(form.address) }}</div>
    <div class="col-md-3">{{ form_row(form.city) }}</div>
    <div class="col-md-3">{{ form_row(form.postal_code) }}</div>
</div>
{{ form_widget(form) }}
<button class="btn btn-primary">{{ button|default('Sauvegarder') }}</button>
{{ form_end(form) }}

